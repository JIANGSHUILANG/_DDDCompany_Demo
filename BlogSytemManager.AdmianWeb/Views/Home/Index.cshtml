@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutblogSystemManager.cshtml";
}

<!-- content start -->
<div class="admin-content">
    <div class="am-cf am-padding">
        <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">个人资料</strong> / <small>Personal information</small></div>
    </div>

    <hr />

    <div class="am-g">

        <div class="am-u-sm-12 am-u-md-4 am-u-md-push-8">
            <div class="am-panel am-panel-default">
                <div class="am-panel-bd">
                    <div class="am-g">
                        <div class="am-u-md-4">
                            <img id="img" class="am-img-circle am-img-thumbnail" src="" alt="" />
                        </div>
                        <div class="am-u-md-8">
                            <p>你可以使用<a href="#">gravatar.com</a>提供的头像或者使用本地上传头像。 </p>
                            <form class="am-form" action="/Home/UpLoadFile" method="post" enctype="multipart/form-data">
                                <div class="am-form-group">
                                    <input type="file" id="user-pic" name="head_image" >
                                    <p class="am-form-help">请选择要上传的文件...</p>
                                    <button type="submit" class="am-btn am-btn-primary am-btn-xs">保存</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="am-u-sm-12 am-u-md-8 am-u-md-pull-4">
            <form class="am-form am-form-horizontal" method="post" action="/Home/PersonalSave">
                <div class="am-form-group">
                    <input type="hidden" name="head_image" value="" />
                    <label for="user-name" class="am-u-sm-3 am-form-label">账户名 / Name</label>
                    <div class="am-u-sm-9">
                        <input type="text" id="UserName" name="UserName" placeholder="姓名 / Name">
                        <small>输入你的登陆账户名</small>
                    </div>
                </div>

                <div class="am-form-group">
                    <label for="user-email" class="am-u-sm-3 am-form-label">密码 / PassWord</label>
                    <div class="am-u-sm-9">
                        <input type="email" id="UserPass" name="UserPass" placeholder="输入你的密码 / PassWord">
                        <small>输入密码</small>
                    </div>
                </div>

                <div class="am-form-group">
                    <label for="user-email" class="am-u-sm-3 am-form-label">电子邮件 / Email</label>
                    <div class="am-u-sm-9">
                        <input type="email" id="Email" name="Email" placeholder="输入你的电子邮件 / Email">
                        <small>邮箱你懂得...</small>
                    </div>
                </div>

                <div class="am-form-group">
                    <label for="user-phone" class="am-u-sm-3 am-form-label">电话 / Telephone</label>
                    <div class="am-u-sm-9">
                        <input type="email" id="cell" name="cell" placeholder="输入你的电话号码 / Telephone">
                    </div>
                </div>

                <div class="am-form-group">
                    <label for="user-QQ" class="am-u-sm-3 am-form-label">QQ</label>
                    <div class="am-u-sm-9">
                        <input type="email" id="QQ" name="QQ" placeholder="输入你的QQ号码">
                    </div>
                </div>

                <div class="am-form-group">
                    <label for="user-weibo" class="am-u-sm-3 am-form-label">微博 / Twitter</label>
                    <div class="am-u-sm-9">
                        <input type="email" id="weibo" name="weibo" placeholder="输入你的微博 / Twitter">
                    </div>
                </div>

                <div class="am-form-group">
                    <label for="user-intro" class="am-u-sm-3 am-form-label">简介 / Intro</label>
                    <div class="am-u-sm-9">
                        <textarea class="" name="content" rows="5" id="content" placeholder="输入个人简介"></textarea>
                        <small>250字以内写出你的一生...</small>
                    </div>
                </div>

                <div class="am-form-group">
                    <div class="am-u-sm-9 am-u-sm-push-3">
                        <button type="button" class="am-btn am-btn-primary">保存修改</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
<!-- content end -->
